\begin_layout Standard
The average energy is given by
\begin_inset FormulaMacro
\newcommand{\swich}[3]{\langle#1|#2|#3\rangle}
\end_inset


\begin_inset FormulaMacro
\newcommand{\braket}[2]{\langle#1|#2\rangle}
\end_inset

 
\begin_inset Formula 
\[
E=\frac{\swich{\phi}H{\phi}}{\braket{\phi}{\phi}}=\swich{\phi}H{\phi}
\]

\end_inset

Since 
\begin_inset Formula $\phi$
\end_inset

 is normalised.
 We want to compute 
\begin_inset Formula $\int\phi^{*}H\phi d\mathbf{r}_{1}d\mathbf{r}_{2}$
\end_inset

.
 Since 
\begin_inset Formula $\phi$
\end_inset

 has no angular dependence we can focus on only the 
\begin_inset Formula $r$
\end_inset

 part of 
\begin_inset Formula $\nabla^{2}$
\end_inset

.
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray*}
\nabla_{1}^{2}\phi & = & \frac{1}{\pi}\Big(\frac{\lambda}{a_{0}}\Big)^{3}\nabla_{1}^{2}e^{-\frac{\lambda}{a_{0}}(r_{1}+r_{2})}\\
 & = & \frac{1}{\pi}\Big(\frac{\lambda}{a_{0}}\Big)^{3}\frac{1}{r_{1}^{2}}\frac{\partial}{\partial r_{1}}\Big(r_{1}^{2}\frac{\partial}{\partial r_{1}}e^{-\frac{\lambda}{a_{0}}(r_{1}+r_{2})}\Big)\\
 & = & \frac{1}{\pi}\Big(\frac{\lambda}{a_{0}}\Big)^{3}\frac{1}{r_{1}^{2}}\frac{\partial}{\partial r_{1}}\Big(r_{1}^{2}(\frac{-\lambda}{a_{0}})e^{-\frac{\lambda}{a_{0}}(r_{1}+r_{2})}\Big)\\
 & = & -\frac{1}{\pi}\Big(\frac{\lambda}{a_{0}}\Big)^{4}\frac{1}{r_{1}^{2}}\frac{\partial}{\partial r_{1}}\Big(r_{1}^{2}e^{-\frac{\lambda}{a_{0}}(r_{1}+r_{2})}\Big)\\
 & = & -\frac{1}{\pi}\Big(\frac{\lambda}{a_{0}}\Big)^{4}\frac{1}{r_{1}^{2}}\Big(2r_{1}e^{-\frac{\lambda}{a_{0}}(r_{1}+r_{2})}-\frac{\lambda}{a_{0}}r_{1}^{2}e^{-\frac{\lambda}{a_{0}}(r_{1}+r_{2})}\Big)\\
 & = & -\frac{1}{\pi}\Big(\frac{\lambda}{a_{0}}\Big)^{4}\Big(2\frac{1}{r_{1}}e^{-\frac{\lambda}{a_{0}}(r_{1}+r_{2})}-\frac{\lambda}{a_{0}}e^{-\frac{\lambda}{a_{0}}(r_{1}+r_{2})}\Big)\\
 & = & -\frac{\lambda}{a_{0}}\Big(2\frac{1}{r_{1}}\frac{1}{\pi}\Big(\frac{\lambda}{a_{0}}\Big)^{3}e^{-\frac{\lambda}{a_{0}}(r_{1}+r_{2})}-\frac{\lambda}{a_{0}}\frac{1}{\pi}\Big(\frac{\lambda}{a_{0}}\Big)^{3}e^{-\frac{\lambda}{a_{0}}(r_{1}+r_{2})}\Big)\\
 & = & -\frac{\lambda}{a_{0}}\Big(2\frac{1}{r_{1}}\phi-\frac{\lambda}{a_{0}}\phi\Big)=-\frac{2\lambda}{a_{0}}\phi\frac{1}{r_{1}}+\frac{\lambda^{2}}{a_{0}^{2}}\phi
\end{eqnarray*}

\end_inset

Similarly 
\begin_inset Formula 
\[
\nabla_{2}^{2}\phi=-\frac{2\lambda}{a_{0}}\phi\frac{1}{r_{2}}+\frac{\lambda^{2}}{a_{0}^{2}}\phi
\]

\end_inset


\end_layout

\begin_layout Standard
Now 
\begin_inset Formula 
\begin{eqnarray*}
H\phi & = & -\frac{\hbar^{2}}{2m}\nabla_{1}^{2}\phi-\frac{Ze^{2}}{4\pi\epsilon_{0}r_{1}}\phi-\frac{\hbar^{2}}{2m}\nabla_{2}^{2}\phi-\frac{Ze^{2}}{4\pi\epsilon_{0}r_{2}}\phi+\frac{e^{2}}{4\pi\epsilon_{0}r_{12}}\phi\\
 & = & -\frac{\hbar^{2}}{2m}(-\frac{2\lambda}{a_{0}})\phi\frac{1}{r_{1}}-\frac{\hbar^{2}}{2m}\frac{\lambda^{2}}{a_{0}^{2}}\phi-\frac{Ze^{2}}{4\pi\epsilon_{0}}\frac{1}{r_{1}}\phi-\frac{\hbar^{2}}{2m}(-\frac{2\lambda}{a_{0}})\phi\frac{1}{r_{2}}-\frac{\hbar^{2}}{2m}\frac{\lambda^{2}}{a_{0}^{2}}\phi-\frac{Ze^{2}}{4\pi\epsilon_{0}}\frac{1}{r_{2}}\phi+\frac{e^{2}}{4\pi\epsilon_{0}r_{12}}\phi\\
 & = & \frac{\hbar^{2}\lambda}{ma_{0}}\frac{1}{r_{1}}\phi-\frac{Ze^{2}}{4\pi\epsilon_{0}}\frac{1}{r_{1}}\phi+\frac{\hbar^{2}\lambda}{ma_{0}}\frac{1}{r_{2}}\phi-\frac{Ze^{2}}{4\pi\epsilon_{0}}\frac{1}{r_{2}}\phi+\frac{e^{2}}{4\pi\epsilon_{0}r_{12}}\phi-\frac{\hbar^{2}}{m}\frac{\lambda^{2}}{a_{0}^{2}}\phi\\
 & = & \Big(\frac{\hbar^{2}\lambda}{ma_{0}}-\frac{Ze^{2}}{4\pi\epsilon_{0}}\Big)\Big(\frac{1}{r_{1}}\phi+\frac{1}{r_{2}}\phi\Big)+\frac{e^{2}}{4\pi\epsilon_{0}r_{12}}\phi-\frac{\hbar^{2}}{m}\frac{\lambda^{2}}{a_{0}^{2}}\phi
\end{eqnarray*}

\end_inset

Multiplying by 
\begin_inset Formula $\phi^{*}=\phi$
\end_inset

:
\begin_inset Formula 
\[
\phi^{*}H\phi=\Big(\frac{\hbar^{2}\lambda}{ma_{0}}-\frac{Ze^{2}}{4\pi\epsilon_{0}}\Big)\Big(\frac{1}{r_{1}}\phi^{2}+\frac{1}{r_{2}}\phi^{2}\Big)+\frac{e^{2}}{4\pi\epsilon_{0}r_{12}}\phi^{2}-\frac{\hbar^{2}}{m}\frac{\lambda^{2}}{a_{0}^{2}}\phi^{2}
\]

\end_inset

Integrating,
\begin_inset Formula 
\[
E=\swich{\phi}H{\phi}=\Big(\frac{\hbar^{2}\lambda}{ma_{0}}-\frac{Ze^{2}}{4\pi\epsilon_{0}}\Big)\Big(\swich{\phi}{\frac{1}{r_{1}}}{\phi}+\swich{\phi}{\frac{1}{r_{2}}}{\phi}\Big)+\frac{e^{2}}{4\pi\epsilon_{0}}\swich{\phi}{\frac{1}{r_{12}}}{\phi}-\frac{\hbar^{2}}{m}\frac{\lambda^{2}}{a_{0}^{2}}\braket{\phi}{\phi}
\]

\end_inset


\end_layout

\begin_layout Standard
Now we evaluate each integral.
 
\begin_inset Formula $\braket{\phi}{\phi}=1$
\end_inset

.
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray*}
\swich{\phi}{\frac{1}{r_{1}}}{\phi} & = & \int\phi^{2}\frac{1}{r_{1}}d\mathbf{r}_{1}d\mathbf{r}_{2}\\
 & = & \int_{0}^{\infty}\int_{0}^{\infty}\phi^{2}\frac{1}{r_{1}}r_{1}^{2}r_{2}^{2}dr_{1}dr_{2}\int_{0}^{\pi}\sin\theta_{1}d\theta_{1}\int_{0}^{\pi}\sin\theta_{2}d\theta_{2}\int_{0}^{2\pi}d\phi_{1}\int_{0}^{2\pi}d\phi_{2}\\
 & = & \int_{0}^{\infty}r_{2}^{2}\int_{0}^{\infty}\phi^{2}r_{1}dr_{1}dr_{2}(2)(2)(2\pi)(2\pi)\\
 & = & 16\pi^{2}\int_{0}^{\infty}r_{2}^{2}\int_{0}^{\infty}\phi^{2}r_{1}dr_{1}dr_{2}\\
 & = & 16\Big(\frac{\lambda}{a_{0}}\Big)^{6}\int_{0}^{\infty}r_{2}^{2}\int_{0}^{\infty}r_{1}e^{-\frac{2\lambda}{a_{0}}(r_{1}+r_{2})}dr_{1}dr_{2}\\
 & = & 16\Big(\frac{\lambda}{a_{0}}\Big)^{6}\int_{0}^{\infty}r_{2}^{2}e^{-\frac{2\lambda}{a_{0}}r_{2}}\int_{0}^{\infty}r_{1}e^{-\frac{2\lambda}{a_{0}}r_{1}}dr_{1}dr_{2}
\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Standard
To solve these integrals we can use the gamma function since 
\begin_inset Formula $\Gamma(x)=\int_{0}^{\infty}u^{x-1}e^{-u}du$
\end_inset

.
 Let 
\begin_inset Formula $u=\frac{2\lambda}{a_{0}}r_{1}$
\end_inset

 which implies 
\begin_inset Formula $r_{1}=\frac{a_{0}}{2\lambda}u$
\end_inset

 and 
\begin_inset Formula $dr_{1}=\frac{a_{0}}{2\lambda}du$
\end_inset

.
 Then 
\begin_inset Formula 
\begin{eqnarray*}
\int_{0}^{\infty}r_{1}e^{-\frac{2\lambda}{a_{0}}r_{1}}dr_{1} & = & \Big(\frac{a_{0}}{2\lambda}\Big)^{2}\int_{0}^{\infty}ue^{-u}du=\Big(\frac{a_{0}}{2\lambda}\Big)^{2}\Gamma(2)=\Big(\frac{a_{0}}{2\lambda}\Big)^{2}1!=\Big(\frac{a_{0}}{2\lambda}\Big)^{2}
\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Standard
Since 
\begin_inset Formula $\Gamma(n+1)=n!$
\end_inset

.
 Similarly,
\begin_inset Formula 
\[
\int_{0}^{\infty}r_{2}^{2}e^{-\frac{2\lambda}{a_{0}}r_{2}}dr_{2}=\int_{0}^{\infty}\Big(\frac{a_{0}}{2\lambda}\Big)^{3}u^{2}e^{-u}du=\Big(\frac{a_{0}}{2\lambda}\Big)^{3}\int_{0}^{\infty}u^{2}e^{-u}du=\Big(\frac{a_{0}}{2\lambda}\Big)^{3}\Gamma(3)=\Big(\frac{a_{0}}{2\lambda}\Big)^{3}2!=2\Big(\frac{a_{0}}{2\lambda}\Big)^{3}
\]

\end_inset


\end_layout

\begin_layout Standard
Substituting this back in
\begin_inset Formula 
\[
\swich{\phi}{\frac{1}{r_{1}}}{\phi}=16\Big(\frac{\lambda}{a_{0}}\Big)^{6}2\Big(\frac{a_{0}}{2\lambda}\Big)^{3}\Big(\frac{a_{0}}{2\lambda}\Big)^{2}=\frac{32}{8(4)}\frac{\lambda}{a_{0}}=\frac{\lambda}{a_{0}}
\]

\end_inset


\end_layout

\begin_layout Standard
Now since 
\begin_inset Formula $\phi(r_{1},r_{2})=\phi(r_{2},r_{1})$
\end_inset

, the 
\begin_inset Formula $\swich{\phi}{\frac{1}{r_{2}}}{\phi}$
\end_inset

 integral goes exactly the same way and we have 
\begin_inset Formula 
\[
\swich{\phi}{\frac{1}{r_{2}}}{\phi}=\frac{\lambda}{a_{0}}
\]

\end_inset


\end_layout

\begin_layout Standard
Now we evaluate 
\begin_inset Formula $\swich{\phi}{\frac{1}{r_{12}}}{\phi}=\int\phi^{2}\frac{1}{r_{12}}d\mathbf{r}_{1}d\mathbf{r}_{2}$
\end_inset

 where 
\begin_inset Formula $r_{12}=|\mathbf{r}_{1}-\mathbf{r}_{2}|$
\end_inset

 following the way they did it in the book (p.489 eqs 10.75-10.80).
 The factor 
\begin_inset Formula $\frac{1}{r_{12}}$
\end_inset

 can be expanded as 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\frac{1}{r_{12}}=\sum_{l=0}^{\infty}\sum_{m=-l}^{l}\frac{4\pi}{2l+1}\frac{(r_{<})^{l}}{(r_{>})^{l+1}}Y_{lm}^{*}(\theta_{1},\phi_{1})Y_{lm}(\theta_{2},\phi_{2})
\]

\end_inset

where 
\begin_inset Formula $r_{<}$
\end_inset

 is the smaller of 
\begin_inset Formula $r_{1}$
\end_inset

 and 
\begin_inset Formula $r_{2}$
\end_inset

, 
\begin_inset Formula $r_{>}$
\end_inset

 is the larger of 
\begin_inset Formula $r_{1}$
\end_inset

 and 
\begin_inset Formula $r_{2}$
\end_inset

, and 
\begin_inset Formula $Y_{lm}(\theta,\phi)$
\end_inset

 is the spherical harmonic function.
 Substitute this expansion and we get 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray*}
\swich{\phi}{\frac{1}{r_{12}}}{\phi} & = & \sum_{l=0}^{\infty}\sum_{m=-l}^{l}\frac{4\pi}{2l+1}\int\phi^{2}\frac{(r_{<})^{l}}{(r_{>})^{l+1}}Y_{lm}^{*}(\theta_{1},\phi_{1})Y_{lm}(\theta_{2},\phi_{2})d\mathbf{r}_{1}d\mathbf{r}_{2}\\
 & = & \sum_{l=0}^{\infty}\sum_{m=-l}^{l}\frac{4\pi}{2l+1}\int_{0}^{\infty}r_{1}^{2}\int_{0}^{\infty}r_{2}^{2}\phi^{2}\frac{(r_{<})^{l}}{(r_{>})^{l+1}}dr_{2}dr_{1}\int Y_{lm}^{*}(\theta_{1},\phi_{1})d\Omega_{1}\int Y_{lm}(\theta_{2},\phi_{2})d\Omega_{2}\\
 & = & \sum_{l=0}^{\infty}\sum_{m=-l}^{l}\frac{4\pi}{2l+1}\frac{4\pi}{4\pi}\int_{0}^{\infty}r_{1}^{2}\int_{0}^{\infty}r_{2}^{2}\phi^{2}\frac{(r_{<})^{l}}{(r_{>})^{l+1}}dr_{2}dr_{1}\int Y_{lm}^{*}(\theta_{1},\phi_{1})d\Omega_{1}\int Y_{lm}(\theta_{2},\phi_{2})d\Omega_{2}
\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Standard
Note that 
\begin_inset Formula $Y_{00}(\theta,\phi)=\frac{1}{\sqrt{4\pi}}$
\end_inset

.
 So
\begin_inset Formula 
\[
\swich{\phi}{\frac{1}{r_{12}}}{\phi}=\sum_{l=0}^{\infty}\sum_{m=-l}^{l}\frac{16\pi^{2}}{2l+1}\int_{0}^{\infty}r_{1}^{2}\int_{0}^{\infty}r_{2}^{2}\phi^{2}\frac{(r_{<})^{l}}{(r_{>})^{l+1}}dr_{2}dr_{1}\int Y_{lm}^{*}(\theta_{1},\phi_{1})Y_{00}d\Omega_{1}\int Y_{00}Y_{lm}(\theta_{2},\phi_{2})d\Omega_{2}
\]

\end_inset


\end_layout

\begin_layout Standard
Since the spherical harmonic functions are orthogonal we have 
\begin_inset Formula 
\[
\swich{\phi}{\frac{1}{r_{12}}}{\phi}=\sum_{l=0}^{\infty}\sum_{m=-l}^{l}\frac{16\pi^{2}}{2l+1}\int_{0}^{\infty}r_{1}^{2}\int_{0}^{\infty}r_{2}^{2}\phi^{2}\frac{(r_{<})^{l}}{(r_{>})^{l+1}}dr_{2}dr_{1}\delta_{0l}\delta_{0m}
\]

\end_inset

Which means that 
\begin_inset Formula $l=m=0$
\end_inset

.
 So 
\begin_inset Formula 
\begin{eqnarray*}
\swich{\phi}{\frac{1}{r_{12}}}{\phi} & = & 16\pi^{2}\int_{0}^{\infty}r_{1}^{2}\int_{0}^{\infty}r_{2}^{2}\phi^{2}\frac{1}{r_{>}}dr_{2}dr_{1}\\
 & = & 16\Big(\frac{\lambda}{a_{0}}\Big)^{6}\int_{0}^{\infty}r_{1}^{2}\int_{0}^{\infty}r_{2}^{2}e^{-\frac{2\lambda}{a_{0}}(r_{1}+r_{2})}\frac{1}{r_{>}}dr_{2}dr_{1}\\
 & = & 16\Big(\frac{\lambda}{a_{0}}\Big)^{6}\int_{0}^{\infty}r_{1}^{2}e^{-\frac{2\lambda}{a_{0}}r_{1}}\int_{0}^{\infty}r_{2}^{2}e^{-\frac{2\lambda}{a_{0}}r_{2}}\frac{1}{r_{>}}dr_{2}dr_{1}
\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Standard
Now we evaluate 
