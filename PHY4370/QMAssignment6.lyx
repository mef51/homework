\begin_inset Formula $\int_{0}^{\infty}r_{2}^{2}e^{-\frac{2\lambda}{a_{0}}r_{2}}\frac{1}{r_{>}}dr_{2}$
\end_inset

.
 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray*}
\int_{0}^{\infty}r_{2}^{2}e^{-\frac{2\lambda}{a_{0}}r_{2}}\frac{1}{r_{>}}dr_{2} & = & \int_{0}^{r_{1}}\frac{1}{r_{1}}r_{2}^{2}e^{-\frac{2\lambda}{a_{0}}r_{2}}dr_{2}+\int_{r_{1}}^{\infty}\frac{1}{r_{2}}r_{2}^{2}e^{-\frac{2\lambda}{a_{0}}r_{2}}dr_{2}\\
 & = & \frac{1}{r_{1}}\int_{0}^{r_{1}}r_{2}^{2}e^{-\frac{2\lambda}{a_{0}}r_{2}}dr_{2}+\int_{r_{1}}^{\infty}r_{2}e^{-\frac{2\lambda}{a_{0}}r_{2}}dr_{2}
\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Standard
These can be solved by integrating by parts.
 For 
\begin_inset Formula $\int_{r_{1}}^{\infty}r_{2}e^{-\frac{2\lambda}{a_{0}}r_{2}}dr_{2}$
\end_inset

 use 
\begin_inset Formula $u=r_{2}$
\end_inset

 and 
\begin_inset Formula $dv=e^{-\frac{2\lambda}{a_{0}}r_{2}}dr_{2}$
\end_inset

.
\begin_inset Formula 
\begin{eqnarray*}
\int_{r_{1}}^{\infty}r_{2}e^{-\frac{2\lambda}{a_{0}}r_{2}}dr_{2} & = & -\frac{a_{0}}{2\lambda}r_{2}e^{-\frac{2\lambda}{a_{0}}r_{2}}+\frac{a_{0}}{2\lambda}\int_{r_{1}}^{\infty}e^{-\frac{2\lambda}{a_{0}}r_{2}}dr_{2}\\
 & = & -\frac{a_{0}}{2\lambda}r_{2}e^{-\frac{2\lambda}{a_{0}}r_{2}}-\Big(\frac{a_{0}}{2\lambda}\Big)^{2}e^{-\frac{2\lambda}{a_{0}}r_{2}}\Big|_{r_{1}}^{\infty}\\
 & = & \frac{a_{0}}{2\lambda}r_{1}e^{-\frac{2\lambda}{a_{0}}r_{1}}+\Big(\frac{a_{0}}{2\lambda}\Big)^{2}e^{-\frac{2\lambda}{a_{0}}r_{1}}\qquad\text{since }\lim_{x\rightarrow\infty}xe^{-x}=0
\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Standard
For 
\family roman
\series medium
\shape up
\size normal
\emph off
\bar no
\strikeout off
\uuline off
\uwave off
\noun off
\color none

\begin_inset Formula $\int_{0}^{r_{1}}r_{2}^{2}e^{-\frac{2\lambda}{a_{0}}r_{2}}dr_{2}$
\end_inset

 use 
\begin_inset Formula $u=r_{2}^{2}$
\end_inset

 and 
\begin_inset Formula $dv=e^{-\frac{2\lambda}{a_{0}}r_{2}}dr_{2}$
\end_inset

.
 
\begin_inset Formula 
\begin{eqnarray*}
\int_{0}^{r_{1}}r_{2}^{2}e^{-\frac{2\lambda}{a_{0}}r_{2}}dr_{2} & = & -\Big(\frac{a_{0}}{2\lambda}\Big)r_{2}^{2}e^{-\frac{2\lambda}{a_{0}}r_{2}}+\frac{a_{0}}{\lambda}\int_{0}^{r_{1}}r_{2}e^{-\frac{2\lambda}{a_{0}}r_{2}}dr_{2}\\
 & = & -\Big(\frac{a_{0}}{2\lambda}\Big)r_{2}^{2}e^{-\frac{2\lambda}{a_{0}}r_{2}}+\frac{a_{0}}{\lambda}\Big[-\frac{a_{0}}{2\lambda}r_{2}e^{-\frac{2\lambda}{a_{0}}r_{2}}-\Big(\frac{a_{0}}{2\lambda}\Big)^{2}e^{-\frac{2\lambda}{a_{0}}r_{2}}\Big]\Big|_{0}^{r_{1}}\\
 & = & -\Big(\frac{a_{0}}{2\lambda}\Big)r_{2}^{2}e^{-\frac{2\lambda}{a_{0}}r_{2}}-\frac{1}{2}\Big(\frac{a_{0}}{\lambda}\Big)^{2}r_{2}e^{-\frac{2\lambda}{a_{0}}r_{2}}-\frac{1}{4}\Big(\frac{a_{0}}{\lambda}\Big)^{3}e^{-\frac{2\lambda}{a_{0}}r_{2}}\Big|_{0}^{r_{1}}\\
 & = & -\Big(\frac{a_{0}}{2\lambda}\Big)r_{1}^{2}e^{-\frac{2\lambda}{a_{0}}r_{1}}-\frac{1}{2}\Big(\frac{a_{0}}{\lambda}\Big)^{2}r_{1}e^{-\frac{2\lambda}{a_{0}}r_{1}}-\frac{1}{4}\Big(\frac{a_{0}}{\lambda}\Big)^{3}e^{-\frac{2\lambda}{a_{0}}r_{1}}+\frac{1}{4}\Big(\frac{a_{0}}{\lambda}\Big)^{3}\\
\frac{1}{r_{1}}\int_{0}^{r_{1}}r_{2}^{2}e^{-\frac{2\lambda}{a_{0}}r_{2}}dr_{2} & = & -\Big(\frac{a_{0}}{2\lambda}\Big)r_{1}e^{-\frac{2\lambda}{a_{0}}r_{1}}-\frac{1}{2}\Big(\frac{a_{0}}{\lambda}\Big)^{2}e^{-\frac{2\lambda}{a_{0}}r_{1}}-\frac{1}{4}\Big(\frac{a_{0}}{\lambda}\Big)^{3}\frac{1}{r_{1}}e^{-\frac{2\lambda}{a_{0}}r_{1}}+\frac{1}{4}\frac{1}{r_{1}}\Big(\frac{a_{0}}{\lambda}\Big)^{3}
\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Standard
Putting it together
\begin_inset Formula 
\begin{eqnarray*}
\int_{0}^{\infty}r_{2}^{2}e^{-\frac{2\lambda}{a_{0}}r_{2}}\frac{1}{r_{>}}dr_{2} & = & -\Big(\frac{a_{0}}{2\lambda}\Big)r_{1}e^{-\frac{2\lambda}{a_{0}}r_{1}}-\frac{1}{2}\Big(\frac{a_{0}}{\lambda}\Big)^{2}e^{-\frac{2\lambda}{a_{0}}r_{1}}-\frac{1}{4}\Big(\frac{a_{0}}{\lambda}\Big)^{3}\frac{1}{r_{1}}e^{-\frac{2\lambda}{a_{0}}r_{1}}+\frac{1}{4}\frac{1}{r_{1}}\Big(\frac{a_{0}}{\lambda}\Big)^{3}+\frac{a_{0}}{2\lambda}r_{1}e^{-\frac{2\lambda}{a_{0}}r_{1}}\\
 &  & +\Big(\frac{a_{0}}{2\lambda}\Big)^{2}e^{-\frac{2\lambda}{a_{0}}r_{1}}\\
 & = & -\frac{1}{2}\Big(\frac{a_{0}}{\lambda}\Big)^{2}e^{-\frac{2\lambda}{a_{0}}r_{1}}-\frac{1}{4}\Big(\frac{a_{0}}{\lambda}\Big)^{3}\frac{1}{r_{1}}e^{-\frac{2\lambda}{a_{0}}r_{1}}+\frac{1}{4}\frac{1}{r_{1}}\Big(\frac{a_{0}}{\lambda}\Big)^{3}+\Big(\frac{a_{0}}{2\lambda}\Big)^{2}e^{-\frac{2\lambda}{a_{0}}r_{1}}\\
 & = & -\Big(\frac{a_{0}}{2\lambda}\Big)^{2}e^{-\frac{2\lambda}{a_{0}}r_{1}}-\frac{1}{4}\Big(\frac{a_{0}}{\lambda}\Big)^{3}\frac{1}{r_{1}}e^{-\frac{2\lambda}{a_{0}}r_{1}}+\frac{1}{4}\frac{1}{r_{1}}\Big(\frac{a_{0}}{\lambda}\Big)^{3}
\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Standard
Continuing on
\begin_inset Formula 
\begin{eqnarray*}
\swich{\phi}{\frac{1}{r_{12}}}{\phi} & = & 16\Big(\frac{\lambda}{a_{0}}\Big)^{6}\int_{0}^{\infty}r_{1}^{2}e^{-\frac{2\lambda}{a_{0}}r_{1}}\int_{0}^{\infty}r_{2}^{2}e^{-\frac{2\lambda}{a_{0}}r_{2}}\frac{1}{r_{>}}dr_{2}dr_{1}\\
 & = & 16\Big(\frac{\lambda}{a_{0}}\Big)^{6}\int_{0}^{\infty}r_{1}^{2}e^{-\frac{2\lambda}{a_{0}}r_{1}}\Big(-\Big(\frac{a_{0}}{2\lambda}\Big)^{2}e^{-\frac{2\lambda}{a_{0}}r_{1}}-\frac{1}{4}\Big(\frac{a_{0}}{\lambda}\Big)^{3}\frac{1}{r_{1}}e^{-\frac{2\lambda}{a_{0}}r_{1}}+\frac{1}{4}\frac{1}{r_{1}}\Big(\frac{a_{0}}{\lambda}\Big)^{3}\Big)dr_{1}\\
 & = & 16\Big(\frac{\lambda}{a_{0}}\Big)^{6}\Bigg[-\Big(\frac{a_{0}}{2\lambda}\Big)^{2}\int_{0}^{\infty}r_{1}^{2}e^{-\frac{4\lambda}{a_{0}}r_{1}}dr_{1}-\frac{1}{4}\Big(\frac{a_{0}}{\lambda}\Big)^{3}\int_{0}^{\infty}r_{1}e^{-\frac{4\lambda}{a_{0}}r_{1}}dr_{1}+\frac{1}{4}\Big(\frac{a_{0}}{\lambda}\Big)^{3}\int_{0}^{\infty}r_{1}e^{-\frac{2\lambda}{a_{0}}r_{1}}dr_{1}\Bigg]
\end{eqnarray*}

\end_inset

For each integral subsitute 
\begin_inset Formula $u$
\end_inset

 for the positive part of the exponent and then use the Gamma function.
\begin_inset Formula 
\begin{eqnarray*}
\swich{\phi}{\frac{1}{r_{12}}}{\phi} & = & 16\Big(\frac{\lambda}{a_{0}}\Big)^{6}\Bigg[-\Big(\frac{a_{0}}{2\lambda}\Big)^{2}\Big(\frac{a_{0}}{4\lambda}\Big)^{3}\int_{0}^{\infty}u^{2}e^{-u}du-\frac{1}{4}\Big(\frac{a_{0}}{\lambda}\Big)^{3}\Big(\frac{a_{0}}{4\lambda}\Big)^{2}\int_{0}^{\infty}ue^{-u}du+\frac{1}{4}\Big(\frac{a_{0}}{\lambda}\Big)^{3}\Big(\frac{a_{0}}{2\lambda}\Big)^{2}\int_{0}^{\infty}ue^{-u}du\Bigg]\\
 & = & 16\Big(\frac{\lambda}{a_{0}}\Big)^{6}\Bigg[-\Big(\frac{a_{0}}{2\lambda}\Big)^{2}\Big(\frac{a_{0}}{4\lambda}\Big)^{3}\Gamma(3)-\frac{1}{4}\Big(\frac{a_{0}}{\lambda}\Big)^{3}\Big(\frac{a_{0}}{4\lambda}\Big)^{2}\Gamma(2)+\frac{1}{4}\Big(\frac{a_{0}}{\lambda}\Big)^{3}\Big(\frac{a_{0}}{2\lambda}\Big)^{2}\Gamma(2)\Bigg]\\
 & = & 16\Big(\frac{\lambda}{a_{0}}\Big)^{6}\Bigg[-2\Big(\frac{a_{0}}{2\lambda}\Big)^{2}\Big(\frac{a_{0}}{4\lambda}\Big)^{3}-\frac{1}{4}\Big(\frac{a_{0}}{\lambda}\Big)^{3}\Big(\frac{a_{0}}{4\lambda}\Big)^{2}+\frac{1}{4}\Big(\frac{a_{0}}{\lambda}\Big)^{3}\Big(\frac{a_{0}}{2\lambda}\Big)^{2}\Bigg]\\
 & = & 16\Bigg[-2\Big(\frac{\lambda}{a_{0}}\Big)^{6}\Big(\frac{a_{0}}{2\lambda}\Big)^{2}\Big(\frac{a_{0}}{4\lambda}\Big)^{3}-\frac{1}{4}\Big(\frac{\lambda}{a_{0}}\Big)^{6}\Big(\frac{a_{0}}{\lambda}\Big)^{3}\Big(\frac{a_{0}}{4\lambda}\Big)^{2}+\frac{1}{4}\Big(\frac{\lambda}{a_{0}}\Big)^{6}\Big(\frac{a_{0}}{\lambda}\Big)^{3}\Big(\frac{a_{0}}{2\lambda}\Big)^{2}\Bigg]\\
 & = & 16\Bigg[-\frac{2}{4(4^{3})}\frac{\lambda}{a_{0}}-\frac{1}{4(16)}\frac{\lambda}{a_{0}}+\frac{1}{4(4)}\frac{\lambda}{a_{0}}\Bigg]\\
 & = & -\frac{2}{16}\frac{\lambda}{a_{0}}-\frac{1}{4}\frac{\lambda}{a_{0}}+\frac{\lambda}{a_{0}}=(1-\frac{1}{8}-\frac{1}{4})\frac{\lambda}{a_{0}}=\frac{5}{8}\frac{\lambda}{a_{0}}
\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Standard
We've evaluated all the integrals we wanted.
 Now 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray*}
E & = & \Big(\frac{\hbar^{2}\lambda}{ma_{0}}-\frac{Ze^{2}}{4\pi\epsilon_{0}}\Big)\Big(\swich{\phi}{\frac{1}{r_{1}}}{\phi}+\swich{\phi}{\frac{1}{r_{2}}}{\phi}\Big)+\frac{e^{2}}{4\pi\epsilon_{0}}\swich{\phi}{\frac{1}{r_{12}}}{\phi}-\frac{\hbar^{2}}{m}\frac{\lambda^{2}}{a_{0}^{2}}\braket{\phi}{\phi}\\
 & = & \Big(\frac{\hbar^{2}\lambda}{ma_{0}}-\frac{Ze^{2}}{4\pi\epsilon_{0}}\Big)\Big(\frac{2\lambda}{a_{0}}\Big)+\frac{e^{2}}{4\pi\epsilon_{0}}\frac{5}{8}\frac{\lambda}{a_{0}}-\frac{\hbar^{2}}{m}\frac{\lambda^{2}}{a_{0}^{2}}\\
 & = & \frac{\lambda}{a_{0}}\Big(\frac{2\hbar^{2}\lambda}{ma_{0}}-2Z\frac{e^{2}}{4\pi\epsilon_{0}}+\frac{5}{8}\frac{e^{2}}{4\pi\epsilon_{0}}-\frac{\hbar^{2}\lambda}{ma_{0}}\Big)\\
 & = & \frac{\lambda}{a_{0}}\Big(\frac{\hbar^{2}\lambda}{ma_{0}}-2Z\frac{e^{2}}{4\pi\epsilon_{0}}+\frac{5}{8}\frac{e^{2}}{4\pi\epsilon_{0}}\Big)\\
 & = & \frac{\lambda}{a_{0}}\Big(\lambda\frac{e^{2}}{4\pi\epsilon_{0}}-2Z\frac{e^{2}}{4\pi\epsilon_{0}}+\frac{5}{8}\frac{e^{2}}{4\pi\epsilon_{0}}\Big)\qquad\text{using }a_{0}=\frac{4\pi\epsilon_{0}\hbar^{2}}{me^{2}}\\
 & = & \frac{e^{2}}{4\pi\epsilon_{0}(a_{0})}\Big(\lambda^{2}-2Z\lambda+\frac{5}{8}\lambda\Big)
\end{eqnarray*}

\end_inset

as wanted.
\end_layout

\begin_layout Standard
Now we want to find 
\begin_inset Formula $\lambda$
\end_inset

 such that 
\begin_inset Formula $E$
\end_inset

 is minimized.
 This is given by 
\begin_inset Formula 
\begin{eqnarray*}
0 & = & \frac{dE}{d\lambda}=\frac{e^{2}}{4\pi\epsilon_{0}(a_{0})}\Big(2\lambda-2Z+\frac{5}{8}\Big)\\
0 & = & 2\lambda-2Z+\frac{5}{8}\\
\lambda & = & Z+\frac{5}{16}
\end{eqnarray*}

\end_inset


\end_layout

