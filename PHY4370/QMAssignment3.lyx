\begin_inset Formula $g(\rho)$
\end_inset

 must satisfy 
\begin_inset Formula 
\[
\frac{d^{2}g}{d\rho^{2}}+\Big(\frac{2|m|+1}{\rho}-2\rho\Big)\frac{dg}{d\rho}-[2(|m|+1)-\lambda]g=0
\]

\end_inset

Then 
\begin_inset Formula $u_{El}=e^{-\rho^{2}/2}\rho^{|m|+1}g(\rho)$
\end_inset

 and so 
\begin_inset Formula 
\begin{eqnarray*}
R_{El}(\rho) & = & \frac{u_{El}}{r}=\alpha\frac{u_{El}}{\rho}=\alpha e^{-\rho^{2}/2}\rho^{|m|}g(\rho)\\
\psi_{lm} & = & R_{El}(\rho)e^{im\varphi}\\
 & = & \alpha e^{-\rho^{2}/2}\rho^{|m|}g(\rho)e^{im\varphi}
\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Standard
Let 
\begin_inset Formula $v=\rho^{2}$
\end_inset

.
 Then 
\begin_inset Formula $dv=2\rho d\rho$
\end_inset

 and 
\begin_inset Formula $d\rho=\frac{dv}{2\rho}=\frac{dv}{2\sqrt{v}}$
\end_inset

.
 Substitute into the equation on 
\begin_inset Formula $g(\rho)$
\end_inset

:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray*}
4v\frac{d^{2}g}{dv^{2}}+\Big(\frac{2|m|+1}{v^{1/2}}-2v^{1/2}\Big)2v^{1/2}\frac{dg}{dv}-[2(|m|+1)-\lambda]g & = & 0\\
4v\frac{d^{2}g}{dv^{2}}+2(2|m|+1-2v)\frac{dg}{dv}-[2(|m|+1)-\lambda]g & = & 0\\
4v\frac{d^{2}g}{dv^{2}}+4(|m|+\frac{1}{2}-v)\frac{dg}{dv}-2[(|m|+1)-\frac{\lambda}{2}]g & = & 0\\
v\frac{d^{2}g}{dv^{2}}+(|m|+\frac{1}{2}-v)\frac{dg}{dv}-\frac{1}{2}[(|m|+1)-\frac{\lambda}{2}]g & = & 0
\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Standard
The radial quantization condition is 
\begin_inset Formula 
\begin{eqnarray*}
n_{r} & = & -\frac{1}{2}\Big((|m|+1)-\frac{\lambda}{2}\Big)=0,1,2...\\
-2n_{r} & = & |m|+1-\frac{\lambda}{2}\\
\frac{\lambda}{2} & = & 2n_{r}+|m|+1
\end{eqnarray*}

\end_inset

Let 
\begin_inset Formula $n\equiv2n_{r}+|m|$
\end_inset


\begin_inset Formula 
\[
\lambda=2(n+1)
\]

\end_inset

Since 
\begin_inset Formula $\lambda=\frac{2E}{\hbar\omega}$
\end_inset


\begin_inset Formula 
\begin{eqnarray*}
\frac{2E}{\hbar\omega} & = & 2(n+1)\\
E_{n} & = & \hbar\omega(n+1)
\end{eqnarray*}

\end_inset

These energy levels are 
\begin_inset Formula $(n+1)(n+2)/2$
\end_inset

-fold degenerate.
\end_layout

\begin_layout Standard

\series bold
(d)
\series default
 The overall wave function is 
\begin_inset Formula 
\[
\psi_{nm}(r,\varphi)=N\rho^{|m|}e^{-\rho^{2}/2}e^{im\varphi}L_{n_{r}+|m|}^{|m|}(\rho^{2})=N\rho^{|m|}e^{-\rho^{2}/2}e^{im\varphi}L_{(n+|m|)/2}^{|m|}(\rho^{2})
\]

\end_inset


\end_layout

\begin_layout Standard
We want to find the normalization constant 
\begin_inset Formula $N$
\end_inset

.
\begin_inset Formula 
\[
1=\int|\psi(r,\varphi)|^{2}d\mathbf{r}
\]

\end_inset

Ignore the radial part.
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray*}
1 & = & \int|N|^{2}\rho^{2|m|}e^{-\rho^{2}}\Big(L_{(n+|m|)/2}^{|m|}(\rho^{2})\Big)^{2}r^{2}dr\\
 & = & \frac{|N|^{2}}{\alpha^{3}}\int_{0}^{\infty}\rho^{2|m|}e^{-\rho^{2}}\Big(L_{(n+|m|)/2}^{|m|}(\rho^{2})\Big)^{2}\rho^{2}d\rho\\
 & = & \frac{|N|^{2}}{\alpha^{3}}\int_{0}^{\infty}\rho^{2|m|+2}e^{-\rho^{2}}\Big(L_{(n+|m|)/2}^{|m|}(\rho^{2})\Big)^{2}d\rho
\end{eqnarray*}

\end_inset

Let 
\begin_inset Formula 
\begin{eqnarray*}
U_{|m|}(\rho^{2},s) & = & \frac{(-s)^{|m|}}{(1-s)^{|m|+1}}\exp\Big(-\rho^{2}\frac{s}{1-s}\Big)=\sum_{q=|m|}^{\infty}\frac{s^{q}}{q!}L_{q}^{|m|}(\rho^{2})\\
U_{|m|}(\rho^{2},t) & = & \frac{(-t)^{|m|}}{(1-t)^{|m|+1}}\exp\Big(-\rho^{2}\frac{t}{1-t}\Big)=\sum_{\tilde{q}=|m|}^{\infty}\frac{t^{\tilde{q}}}{\tilde{q}!}L_{\tilde{q}}^{|m|}(\rho^{2})
\end{eqnarray*}

\end_inset

Now
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\int_{0}^{\infty}\rho^{2|m|+2}e^{-\rho^{2}}U_{|m|}(\rho^{2},s)U_{|m|}(\rho^{2},t)d\rho
\]

\end_inset

Then do the same thing as before goodnight
\end_layout

